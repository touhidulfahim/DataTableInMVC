@model IEnumerable<DataTableInMVC.Models.Category>

@{
    ViewBag.Title = "ViewCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <h1 class="page-title">
        CATEGORY
        <small>List</small>
    </h1>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="portlet-title">
                    <div class="caption" align="right">
                        <a href="@Url.Action("AddCategory", "Category")" id="Add" class="btn btn-outline-primary">Add New &nbsp;<i class="glyphicon glyphicon-plus"></i></a>
                    </div>
                    <br />
                </div>
                <div class="box-body">
                    <table class="table table-striped table-responsive-sm table-hover" id="sample_2">
                        <thead>
                            <tr>
                                <th>SL No </th>
                                <th>Name</th>
                                <th>Action</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{i++;}
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditCountry", "Country", new { id = item.CategoryId })" class="editDialog btn btn-info"><i class="fa fa-pencil-square-o"></i>&nbsp;Edit</a>                                     
                                        @Ajax.ActionLink(" Delete", "Delete", "Country", new { @id = item.CategoryId }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "div-record" }, new { onclick = "return confirm('Are you sure you wish to delete this Maid?');", @class = "fa fa-trash-o btn btn-danger" })
                                    </td>
                                </tr>
                                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#sample_2').DataTable();
        });
    </script>
}





